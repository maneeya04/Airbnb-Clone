<%layout("/layouts/boilerplate")%>
  <body>
    <div class="row">
      <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Add a cachy title" type="text" class="form-control"/>
      </div>
      
      <br /><br />
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="enter description" class="form-control"
        ></textarea>
        <br /><br />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input
          name="listing[image]"
          placeholder="enter image URL/Link"
          type="text"
          class="form-control"
        />
        <br /><br />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" placeholder="1200" type="number" class="form-control"/>
          <br /><br />
        </div>
        <div class="mb-3 col-md-8">
          <label for="Country" class="form-label">Country</label>
          <input name="listing[country]" placeholder="India" type="text" class="form-control"/>
          <br /><br />
        </div>
      </div>
      
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="Jaipur,Rajasthan" type="text" class="form-control"/>
        <br /><br />
        <button class="btn btn-dark" class="add-btn">Add</button>
        <br>
        <br>
      </div>
    </div>

      </div>
    
    
    </div>
      
      
    </form>
  </body>
</html>